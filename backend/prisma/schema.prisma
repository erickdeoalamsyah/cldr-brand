generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum PaymentStatus {
  PENDING
  PAID
  EXPIRED
  FAILED
  CANCELLED_BY_USER
}

enum OrderStatus {
  AWAITING_PAYMENT
  PROCESSING
  PACKED
  SHIPPED
  DELIVERED
  CANCELLED
}

//
// MODELS
//

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  passwordHash String
  role        UserRole  @default(USER)

  emailVerifiedAt DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  addresses   Address[]
  cart        Cart?
  orders      Order[]
  wishlist    WishlistItem[]

  emailVerificationTokens EmailVerificationToken[]
  passwordResetTokens     PasswordResetToken[]
}

model Address {
  id        Int      @id @default(autoincrement())
  userId    Int
  label     String?   // "Rumah", "Kantor", dll (opsional)
  recipientName String
  phone     String
  addressLine String  // detail alamat
  provinceId   Int
  cityId       Int
  subdistrictId Int
  provinceName  String?
  cityName      String?
  subdistrictName String?
  postalCode   String?

  isPrimary Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User   @relation(fields: [userId], references: [id])
  orders   Order[] // optional, kalau mau refer ke alamat ini
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String?
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])
  isPopular   Boolean  @default(false)
  isVisible   Boolean  @default(true)
  weight      Int      
  price       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations

  images   ProductImage[]
  variants ProductVariant[]
  wishlist WishlistItem[]
  orderItems OrderItem[]
  cartItems  CartItem[]
}

model ProductImage {
  id        Int      @id @default(autoincrement())
  productId Int
  url       String
  alt       String?
  position  Int      @default(0) // index 0,1,... untuk hover

  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])

  @@index([productId])
}

model ProductVariant {
  id        Int      @id @default(autoincrement())
  productId Int
  size      String   // bebas: S, M, L, XL, 28, 30, dll
  stock     Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id])
  orderItems OrderItem[]
  cartItems  CartItem[]

  @@index([productId])
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  isVisible Boolean   @default(true)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  products  Product[]
}

//
// Cart & Wishlist
//

model Cart {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique // 1 user 1 cart
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User       @relation(fields: [userId], references: [id])
  items CartItem[]
}

model CartItem {
  id         Int      @id @default(autoincrement())
  cartId     Int
  productId  Int
  variantId  Int     // optional kalau produk non-variant
  quantity   Int      @default(1)
  // User tidak bisa mengubah harga setelah add to cart karena price sudah di-snapshot
  price      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  cart    Cart          @relation(fields: [cartId], references: [id])
  product Product       @relation(fields: [productId], references: [id])
  variant ProductVariant @relation(fields: [variantId], references: [id])

  // Jika user add item yang sudah ada, akan update quantity bukan create item baru
  @@unique([cartId, productId, variantId])
  @@index([cartId])
  @@index([productId])
  @@index([variantId])
}

model WishlistItem {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
}

//
// Orders & Payments
//

model Order {
  id        Int      @id @default(autoincrement())
  orderNumber String  @unique // kode order human-friendly, ex: CLRD-2025-0001

  userId   Int
  addressId Int?      // referensi ke alamat user (opsional jika pakai snapshot)

  // Snapshot alamat & pengiriman
  shippingName       String
  shippingPhone      String
  shippingAddress    String   // gabungan addressLine + city/province
  shippingProvinceId Int
  shippingCityId     Int
  shippingSubdistrictId Int
  shippingProvinceName     String?
  shippingCityName         String?
  shippingSubdistrictName  String?
  shippingPostalCode String?

  midtransSnapToken   String?
  midtransRedirectUrl String?
  paymentExpiresAt    DateTime?
  lastMidtransStatus  String? 

  shippingCourier    String   // jne, jnt, anteraja
  shippingService    String   // REG, YES, dsb
  shippingCost       Int      // ongkir final
  shippingEtd        String?  // estimasi hari, ex: "2-3 HARI"
  shippingTrackingNumber String? // nomor resi

  // Payment
  paymentStatus PaymentStatus @default(PENDING)
  paymentMethod String?       // "bank_transfer", "qris", "ewallet", dll
  paymentProvider String?     // biasanya "MIDTRANS"
  midtransOrderId      String? // order_id di Midtrans
  midtransTransactionId String? // transaction_id
  midtransVaNumber      String? // jika VA

  subtotalAmount Int  // total harga barang sebelum ongkir
  shippingAmount Int  // ongkir
  totalAmount    Int  // subtotal + shipping

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  packedAt  DateTime?
  paidAt    DateTime?
  shippedAt DateTime?
  deliveredAt DateTime?
  cancelledAt DateTime?

  // Status order operasional
  orderStatus OrderStatus @default(AWAITING_PAYMENT)

  // Relations
  user    User    @relation(fields: [userId], references: [id])
  address Address? @relation(fields: [addressId], references: [id])

  items OrderItem[]
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId   Int
  productId Int
  variantId Int?

  productName String // snapshot nama produk
  productSlug String?      
  imageUrl    String?      
  size        String? // snapshot size
  unitPrice   Int     // harga satuan saat order
  quantity    Int
  subtotal    Int     // unitPrice * quantity

  createdAt DateTime @default(now())

  order   Order         @relation(fields: [orderId], references: [id])
  product Product       @relation(fields: [productId], references: [id])
  variant ProductVariant? @relation(fields: [variantId], references: [id])

  @@index([orderId])
}

//
// Token verifikasi & reset password
//

model EmailVerificationToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}